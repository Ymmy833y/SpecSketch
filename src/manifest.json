{
  "manifest_version": 3,
  "name": "Spec Sketch",
  "version": "1.1.0",
  "default_locale": "en",
  "description": "SpecSketch lets you easily create screenshots with numbered elements on a webpage.",
  "permissions": ["sidePanel", "scripting", "storage", "tabs", "debugger", "downloads"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/service_worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Side Panel"
  },
  "side_panel": {
    "default_path": "panel/panel.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/overlay.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}