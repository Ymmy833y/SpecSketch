{
  "compilerOptions": {
    "target": "es2024",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "lib": ["dom", "es2024"],
    "outDir": "dist",
    "rootDir": "src",
    "types": ["chrome"],
    "paths": {
      "@common/*": ["./src/common/*"],
      "@infra/*": ["./src/infra/*"],
      "@panel/*": ["./src/runtime/panel/*"],
      "@content/*": ["./src/runtime/content/*"],
      "@background/*": ["./src/runtime/background/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}